name=opencamlib-git
version=git
release=1
source=()

build() {
   cd $PKGMK_SOURCE_DIR

   if cd opencamlib ; then
       git pull
   else
      git clone git://github.com/aewallin/opencamlib.git opencamlib
      cd opencamlib
      mkdir build
   fi

   cd build
<<<<<<< Updated upstream
   cmake ../src
=======
   cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr/ ../src
>>>>>>> Stashed changes
   make -j4
   make DESTDIR=$PKG install
}
