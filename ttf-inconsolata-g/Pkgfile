# Depends on:  fontconfig

# copied this port from
#  https://aur.archlinux.org/packages/ttf-inconsolata-g/
name=ttf-inconsolata-g
version=20090213
release=3
source=('http://www.fantascienza.net/leonardo/ar/inconsolatag/inconsolata-g_font.zip')

build() {
   install -Dm644 $SRC/Inconsolata-g.otf $PKG/usr/share/fonts/TTF/ttf-inconsolata-g.otf
}

